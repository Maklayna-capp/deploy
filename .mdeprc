{
  "nycCoverage": false,
  "test_framework": "jest --coverage --coverageDirectory <coverageDirectory> --detectOpenHandles --runTestsByPath",
  "tests": "__tests__/*.js",
  "auto_compose": true,
  "node": "10.15.1",
  "tester_flavour": "chrome-tester",
  "services": [
    "redisSentinel",
    "redisCluster",
    "rabbitmq",
    "postgres",
    "elasticsearch",
    "cassandra"
  ],
  "extras": {
    "tester": {
      "shm_size": "128m",
      "environment": {
        "CHROME_PATH": "/usr/bin/chromium-browser"
      }
    }
  }
}
